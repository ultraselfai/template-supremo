# ============================================
# Decode Console - Environment Variables
# ============================================
# Copie este arquivo para .env e preencha os valores
# cp .env.example .env

# ============================================
# APLICAÇÃO
# ============================================
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================
# BANCO DE DADOS (PostgreSQL)
# ============================================
# Configuração do Docker Compose
POSTGRES_USER=decode
POSTGRES_PASSWORD=decode_secret
POSTGRES_DB=decode_console

# URL de conexão do Prisma
DATABASE_URL="postgresql://decode:decode_secret@localhost:5432/decode_console?schema=public"

# ============================================
# REDIS (Cache/Sessions)
# ============================================
REDIS_URL="redis://localhost:6379"

# ============================================
# AUTENTICAÇÃO (Better-Auth)
# ============================================
# Secret para assinar tokens (gere com: openssl rand -base64 32)
BETTER_AUTH_SECRET=seu_secret_aqui_gerar_com_openssl

# URL base da aplicação (para callbacks de auth)
BETTER_AUTH_URL=http://localhost:3000

# ============================================
# CLOUDFLARE R2 (Storage)
# ============================================
# Credenciais do R2 (obter em Cloudflare Dashboard)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=decode-uploads
R2_PUBLIC_URL=

# ============================================
# MULTI-TENANCY
# ============================================
# Domínio base para subdomínios de tenants
# Em produção: decode.app
# Em dev: localhost:3000
NEXT_PUBLIC_ROOT_DOMAIN=localhost:3000

